
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1534361960057-19889db9621e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8aGFwcHklMjBkb2d8ZW58MHx8MHx8fDA%3D&w=1000&q=80);">
  <div class="container-fluid">
    <h1>Welcome to Dogger!</h1>
    <p>Happy Dogs looking for happy temporary homes!</p>
    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: "Logout?"},class: "btn btn-flat" %>
    <% else %>
      <%= link_to "Join Us", new_user_registration_path, class: "btn btn-flat" %>
    <% end %>
    <%= link_to "Browse all dogs", dogs_path, class: "btn btn-flat"%>
  </div>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src=<%= @dog.photo_url %> alt="First dog">
      <div class="carousel-caption d-none d-md-block bg-light text-danger">
       <h5><%= @dog.name %></h5>
       <p><%= @dog.breed %></p>
      </div>
    </div>
  <% @dogs.each do |dog| %>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= dog.photo_url %> alt="Additional dog">
    </div>
  <% end %>
  <% raise %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
